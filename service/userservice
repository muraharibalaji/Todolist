const usermodel = require('../models/usermodel')
const todomodellist = require('../models/todomodellist')
const jwt = require('jsonwebtoken');
class userservice{
    static async registeruser(email,password){
try{
    const createuser=await usermodel.create({email,password})
    return createuser
}
   catch(err){
    console.log(err)
}
}

static async checkuser(email){
    try{
        return await usermodel.findOne({email});
    }
    catch(err){
        console.log(err);
    }
}
static async generatetoken(tokendata,secretkey){
    try{
        return jwt.sign(tokendata,secretkey,{expiresIn:'1h'});

    }
    catch (err){
        console.log(err);
    }
}

static async todolist(id,title,desc){
try{
        const createuser=await todomodellist.create({id,title,desc})
        return createuser
    }
       catch(err){
        console.log(err)
    }
    }


 
}
module.exports=userservice